[core]
	editor = vim
	excludesfile = ~/.gitignore

[user]
	name = Matthew Batchelder
	email = borkweb@gmail.com

[github]
	user = borkweb

[alias]
	svn-diff = !~/dotfiles/git-svn-diff.sh
	co = checkout
	st = status
	ci = commit
	lg = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	d = difftool

[color]
	ui = true

[diff]
	tool = vimdiff
	noprefix = true

[difftool]
	prompt = false

[credential]
	helper = osxkeychain
